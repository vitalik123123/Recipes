<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Switch
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:id="@+id/switch_choice_ing_ingredients_row"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
    />
    <ImageView
            android:layout_width="128dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageview_image_ing_ingredients_row"
            app:layout_constraintStart_toEndOf="@+id/switch_choice_ing_ingredients_row"
            app:layout_constraintTop_toTopOf="@+id/switch_choice_ing_ingredients_row"
            app:layout_constraintBottom_toBottomOf="@+id/switch_choice_ing_ingredients_row"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textview_name_ing_ingredients_row"
            app:layout_constraintStart_toEndOf="@+id/imageview_image_ing_ingredients_row"
            app:layout_constraintTop_toTopOf="@+id/imageview_image_ing_ingredients_row"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_image_ing_ingredients_row"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>